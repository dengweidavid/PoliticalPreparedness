<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchEmpty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/empty</item>
    </style>

    <style name="Button" parent="MatchWrap">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ElectionsTitle" parent="MatchWrap">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="ElectionTitle" parent="MatchWrap">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VoterInfoDate" parent="MatchWrap">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="VoterInfoHeader" parent="Wrap">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
